{
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": true
    },
    {
      "name": "stage",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "bug",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "minor"
          },
          {
            "type": "refactor",
            "release": "minor"
          },
          {
            "type": "feature",
            "release": "major"
          },
          {
            "type": "FEATURE",
            "release": "major"
          },
          {
            "type": "STABLE",
            "release": "major"
          },
          {
            "scope": "no-release",
            "release": false
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/github"
  ]
}